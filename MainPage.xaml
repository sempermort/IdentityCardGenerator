<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdentityCardGenerator.MainPage"
             Title="Identity Card Generator">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">
            
            <Label
                Text="Identity Card Generator"
                FontSize="24"
                HorizontalOptions="Center"
                Margin="0,10" />
            
            <!-- Excel File Selection -->
            <Border Padding="10" Margin="0,5">
                <VerticalStackLayout>
                    <Label Text="Excel File" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="ExcelFilePathEntry"
                               Placeholder="Select Excel file"
                               HorizontalOptions="Fill"
                               IsReadOnly="True" />
                        <Button Text="Browse"
                                Clicked="OnBrowseExcelClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Photo Folder Selection -->
            <Border Padding="10" Margin="0,5">
                <VerticalStackLayout>
                    <Label Text="Photo Folder" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="PhotoFolderPathEntry"
                               Placeholder="Select photo folder"
                               HorizontalOptions="Fill"
                               IsReadOnly="True" />
                        <Button Text="Browse"
                                Clicked="OnBrowsePhotoFolderClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Status Message -->
            <Label x:Name="StatusMessageLabel"
                   Text="Ready to process"
                   HorizontalOptions="Center"
                   Margin="0,10" />
            
            <!-- Action Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Load Data"
                        Clicked="OnLoadDataClicked"
                        WidthRequest="120" />
                <Button Text="Generate ID Cards"
                        Clicked="OnGenerateIdCardsClicked"
                        WidthRequest="150" />
            </HorizontalStackLayout>
            
            <!-- Template Button -->
            <Button Text="Customize ID Template"
                    Command="{Binding NavigateToTemplateFormCommand}"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Margin="0,10" />
            
            <!-- Progress Indicator -->
            <ActivityIndicator x:Name="ActivityIndicator"
                               IsRunning="False"
                               HorizontalOptions="Center" />
            
            <!-- Data Preview -->
            <Label Text="Loaded Records:"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            <CollectionView x:Name="IdentityCardsCollectionView"
                ItemsSource="{Binding IdentityCards}"
                HeightRequest="400">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                    Margin="8"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout Spacing="6">

                                <!-- Photo -->
                                <Image Source="{Binding PhotoPath}"
                           WidthRequest="100"
                           HeightRequest="100"
                           Aspect="AspectFill"
                           HorizontalOptions="Center" />

                                <!-- Details -->
                                <Label Text="{Binding Name}"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalOptions="Center" />

                                <Label Text="{Binding IdNumber}"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center" />

                                <Label Text="{Binding Department}"
                           FontSize="14"
                           HorizontalOptions="Center" />

                                <Label Text="{Binding Position}"
                           FontSize="14"
                           HorizontalOptions="Center" />

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
