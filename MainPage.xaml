<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdentityCardGenerator.MainPage"
             Title="Identity Card Generator">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">
            
            <Label
                Text="Identity Card Generator"
                FontSize="24"
                HorizontalOptions="Center"
                Margin="0,10" />
            
            <!-- Excel File Selection -->
            <Frame Padding="10" Margin="0,5">
                <VerticalStackLayout>
                    <Label Text="Excel File" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="ExcelFilePathEntry"
                               Placeholder="Select Excel file"
                               HorizontalOptions="FillAndExpand"
                               IsReadOnly="True" />
                        <Button Text="Browse"
                                Clicked="OnBrowseExcelClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Photo Folder Selection -->
            <Frame Padding="10" Margin="0,5">
                <VerticalStackLayout>
                    <Label Text="Photo Folder" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="PhotoFolderPathEntry"
                               Placeholder="Select photo folder"
                               HorizontalOptions="FillAndExpand"
                               IsReadOnly="True" />
                        <Button Text="Browse"
                                Clicked="OnBrowsePhotoFolderClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Status Message -->
            <Label x:Name="StatusMessageLabel"
                   Text="Ready to process"
                   HorizontalOptions="Center"
                   Margin="0,10" />
            
            <!-- Action Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Load Data"
                        Clicked="OnLoadDataClicked"
                        WidthRequest="120" />
                <Button Text="Generate ID Cards"
                        Clicked="OnGenerateIdCardsClicked"
                        WidthRequest="150" />
            </HorizontalStackLayout>
            
            <!-- Template Button -->
            <Button Text="Customize ID Template"
                    Command="{Binding NavigateToTemplateFormCommand}"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Margin="0,10" />
            
            <!-- Progress Indicator -->
            <ActivityIndicator x:Name="ActivityIndicator"
                               IsRunning="False"
                               HorizontalOptions="Center" />
            
            <!-- Data Preview -->
            <Label Text="Loaded Records:"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            <CollectionView x:Name="IdentityCardsCollectionView"
                            HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding IdNumber}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
