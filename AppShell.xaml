<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdentityCardGenerator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdentityCardGenerator"
    xmlns:views="clr-namespace:IdentityCardGenerator.Views"
    Title="IdentityCardGenerator">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
    <ShellContent
        Title="ID Card Template"
        ContentTemplate="{DataTemplate views:IdCardTemplate}"
        Route="IdCardTemplate" />
        
    <ShellContent
        Title="Template Form"
        ContentTemplate="{DataTemplate views:TemplateForm}"
        Route="TemplateForm" />
    <ShellContent Title="ID card Results"
        Route="IdCardResults"
        ContentTemplate="{DataTemplate views:IdCardResults}" />

</Shell>
